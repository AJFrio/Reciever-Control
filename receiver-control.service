[Unit]
Description=Receiver Control - Hand Tracking Motor Control
After=network.target
Wants=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/frioa1/Downloads/Reciever-Control-main
ExecStart=/home/frioa1/Downloads/Reciever-Control-main/start_receiver_control.sh
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal
Environment=DISPLAY=:0
Environment=XAUTHORITY=/home/pi/.Xauthority

[Install]
WantedBy=multi-user.target
